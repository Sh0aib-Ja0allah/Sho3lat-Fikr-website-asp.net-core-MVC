@model List<Book>;
        @{
    ViewData["Title"] = "List of Books cards.";
          }

            <h1 class="text-center"> Sho3lat Fikr Library Page.</h1>
            <br />
          <div > 
                 <a class="nav-link btn btn btn-outline-success bi bi-pencil-squara " asp-controller="Book" asp-action="AddBook"><strong>Add Book.</strong></a>
          </div>
          <br />
           <div class="bg-success text-white">
                 <form class="border form-inline my-2 my-lg-0" asp-controller="Book" asp-action="Search" method="get" style="padding-right: 25px;">
                          <label><strong>|| - If you want to search for a book type here. - </strong> </label>
                       || <input type="text" name="SearchKey" placeholder="Search for a Book...">
                       || <button type="submit" class=" btn btn-danger my-2 my-sm-0"><strong>Search</strong></button>
                 </form>
           </div>
          <hr>

<div class="row"> 
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-success">
                            <p class="card-text">
                                <h5 class="card-title">
                                   @item.Name
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.BookID"></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="200px" hight="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Description: </b>@item.Description</p>
                            <p class="card-text"><b>Category: </b>@item.BOOKCategory</p>
                            <p class="card-text"><b>Publish Date: </b>@item.PublishDate.ToString("dd/MMM/yyyy")</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                                <a class="btn btn-outline-success text-black bi bi-pencil-squara" href="@item.Price">Download book</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
